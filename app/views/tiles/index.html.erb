<h1>Listing tiles</h1>

<div class="worldView">
	<div class="content">
		<% @tiles.each do |section, tiles| %>
			<%= render 'section', :section => section, :tiles => tiles %>
		<% end %>
	</div>
</div>

<%= form_tag("/tiles/partial?ajax=1", method: "post") do %>
  <%= text_field_tag(:sections) %>
  <%= submit_tag("Submit") %>
<% end %>

<br>

<%= link_to "New Tile", new_tile_path %>
