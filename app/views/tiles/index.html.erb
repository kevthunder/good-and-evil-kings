<div class="worldView" center_x="<%= @start_pos.x %>" center_y="<%= @start_pos.y %>">
	<div class="content">
		<% @tiles.each do |section, tiles| %>
			<%= render 'section', :section => section, :tiles => tiles %>
		<% end %>
	</div>
</div>
<div class="mapTools">
  <%= form_tag(tiles_partial_path+"?ajax=1", method: "post") do %>
    <%= text_field_tag(:sections) %>
    <%= submit_tag("Submit") %>
  <% end %>

  <br>

  <%= link_to "New Tile", new_tile_path %>
</div>