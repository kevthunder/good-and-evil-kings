<h1>Listing stocks</h1>

<table>
  <thead>
    <tr>
      <th>Qte</th>
      <th>Ressource</th>
      <th>Stockable</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.qte %></td>
        <td><%= stock.ressource %></td>
        <td><%= stock.stockable %></td>
        <td><%= stock.type %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

