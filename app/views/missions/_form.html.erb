      <ul>
      <% @mission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :castle_id %><br>
    <%= f.text_field :castle_id %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.collection_select(:type, MissionType.all, :class_name, :name) %>
  </div>
  
  <% if params.has_key? 'castle_id' %>
    <%= f.hidden_field :target_type, :value => 'Castle' %>
