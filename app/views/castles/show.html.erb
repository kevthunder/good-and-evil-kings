<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @castle.name %>
</p>

<p>
  <strong>Kingdom:</strong>
  <%= @castle.kingdom %>
</p>

<%= link_to 'Edit', edit_castle_path(@castle) %> |
<%= link_to 'Back', castles_path %>

<div class="graphics">
  <%= render 'elevations', :size => 200 %>
  <div class="buildings">
    <% @castle.buildings.each do |building| %>
      <%= render building, :size => 200 %>
    <% end %>
  </div>
</div>